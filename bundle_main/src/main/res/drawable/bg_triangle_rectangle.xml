<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/left">
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="70dp"/>
            <gradient
                android:angle="0"
                android:endColor="@color/pinkishOrangeTwo"
                android:startColor="@color/butterscotchTwo"/>
        </shape>
    </item>

    <item
        android:id="@+id/triangle">
        <rotate
            android:fromDegrees="45"
            android:pivotX="-40%"
            android:pivotY="-0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:width="50dp"
                    android:height="50dp"/>
                <solid android:color="@color/pinkishOrangeTwo"/>
            </shape>
        </rotate>
    </item>
</layer-list>