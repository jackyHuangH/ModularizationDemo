<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llUCWebsiteLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llUCHeadWebsiteContain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_baidu"
                android:text="百度"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_sina"
                android:text="新浪"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_taobao"
                android:text="淘宝"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_tianmao"
                android:text="天猫"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_aiqiyi"
                android:text="爱奇艺"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_58"
                android:text="同城"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_dangdang"
                android:text="当当"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_douban"
                android:text="豆瓣"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_youku"
                android:text="优酷"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_jingdong"
                android:text="京东"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_souhu"
                android:text="搜狐"/>

            <TextView
                style="@style/WebsiteTextViewStyle"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_more_site"
                android:text="更多"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>