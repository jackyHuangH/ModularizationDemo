<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="126dp"
    android:layout_height="145dp"
    android:layout_marginRight="10dp"
    android:background="@color/whiteTwelve"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_quick_open"
        android:layout_width="126dp"
        android:layout_height="105dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:id="@+id/tv_name_home_quick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/steelGreyTwo"
            android:textSize="13sp" />

        <cn.jacky.bundle_main.widgets.AutoSizeTextView
            android:id="@+id/tv_price_home_quick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:gravity="left"
            android:text=""
            android:textColor="@color/dark"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>