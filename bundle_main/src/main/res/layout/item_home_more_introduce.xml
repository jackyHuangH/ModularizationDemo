<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="167.5dp"
    android:layout_height="195dp"
    android:background="@color/whiteTen">

    <ImageView
        android:id="@+id/iv_home_more"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name_home_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_home_more"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/dark"
        android:textSize="13.5sp" />

    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_home_more"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_rmb"
            android:textColor="@color/pinkishOrangeThree"
            android:textSize="10sp" />

        <cn.jacky.bundle_main.widgets.AutoSizeTextView
            android:id="@+id/tv_price_home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5dp"
            android:text=""
            android:textColor="@color/pinkishOrangeThree"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_price"
        android:layout_marginBottom="19.5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="5dp">

        <ProgressBar
            android:id="@+id/pb_home_more"
            style="@style/home_more_progressbar_style"
            android:layout_width="118dp"
            android:layout_height="4dp"
            android:max="100"
            android:progress="56" />

        <TextView
            android:id="@+id/tv_percent_home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/pinkishGrey"
            android:textSize="10sp" />
    </LinearLayout>
    <!--左上角-->
    <TextView
        android:id="@+id/tv_home_more_tip"
        android:layout_width="wrap_content"
        android:layout_height="17.5dp"
        android:background="@drawable/triangle_dark"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:text="好好干"
        android:textColor="@color/peach"
        android:textSize="10sp" />
</RelativeLayout>