<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_72dp"
    android:paddingBottom="12dp"
    android:paddingTop="16dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/ic_website"
        android:gravity="center_horizontal|bottom"
        android:text="网址"
        android:textColor="@color/windowBg"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_novel"
        android:gravity="center_horizontal|bottom"
        android:text="小说"
        android:textColor="@color/windowBg"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_video"
        android:gravity="center_horizontal|bottom"
        android:text="视频"
        android:textColor="@color/windowBg"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_funny"
        android:gravity="center_horizontal|bottom"
        android:text="奇趣"
        android:textColor="@color/windowBg"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_cartoon"
        android:gravity="center_horizontal|bottom"
        android:text="漫画"
        android:textColor="@color/windowBg"
        android:textSize="12dp"/>
</LinearLayout>